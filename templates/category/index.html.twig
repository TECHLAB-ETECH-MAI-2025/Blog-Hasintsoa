{% extends 'admin/layout.html.twig' %}

{% block title %}
	Liste des catégories
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h1 class="h2">Liste des catégories</h1>
		<div class="mb-2 mb-md-0">
			<a href="{{ path('app_category_new') }}" class="btn btn-sm btn-outline-secondary">
				Nouveau catégorie
			</a>
		</div>
	</div>
	<div class="container">
		<div class="border rounded-md">
			<table class="table table-hover align-middle">
				<thead>
					<tr>
						<th>Id</th>
						<th>Titre</th>
						<th>Description</th>
						<th>Date de création</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						<tr>
							<td>{{ category.id }}</td>
							<td>{{ category.title }}</td>
							<td>{{ category.description }}</td>
							<td>{{ category.createdAt|date('Y-m-d') }}</td>
							<td>
								<a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-outline-primary">show</a>
								<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-success">edit</a>
								{{ include('category/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
