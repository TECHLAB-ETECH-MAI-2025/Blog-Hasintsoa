{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="d-flex flex-column justify-content-center align-items-center mb-4">
        <h1>Liste des catégories</h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-primary">Nouveau catégorie</a>
    </div>
    <div class="container col-md-10">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Date création</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.title }}</td>
                            <td>{{ category.description }}</td>
                            <td>{{ category.createdAt|date('Y-m-d') }}</td>
                            <td>
                                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary">show</a>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-success">edit</a>
                                {{ include('category/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
