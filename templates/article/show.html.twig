{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container col-md-8 mt-5">
        <h2>Articles</h2>
        <div class="card">
            <div class="card-body">
                <h3>{{ article.title }}</h3>
                <p>
                    {{ article.content|nl2br }}
                </p>
                <p class="text-secondary fst-italic">
                    {% if article.categories|length > 0 %}
                        Catégories :
                        {{ article.categories|map(category => "#{category.title}")|join(', ') }}
                    {% endif %}
                </p>
                <p>
                    Publié le
                    <span class="fw-bold">
                        {{ article.createdAt|date('d M Y à H:i') }}
                    </span>
                </p>
                <div class="my-2">
                    <h4>Commentaires</h4>
                    <div class="comment">
                        <strong>Marie Dupont</strong>: Super article, j'ai appris beaucoup sur les épices utilisées !
                    </div>
                </div>
                <div class="mt-3">
                    <h5>Ajouter un Commentaire</h5>
                    <div class="mb-3">
                        <label for="example-comment-author" class="form-label">Auteur</label>
                        <input type="text" class="form-control" id="example-comment-author" placeholder="Votre nom" />
                    </div>
                    <div class="mb-3">
                        <label for="example-comment" class="form-label">Commentaire</label>
                        <input type="text" class="form-control" id="example-comment" placeholder="Votre commentaire" />
                    </div>
                <button class="btn btn-outline-primary" onclick="alert('Commentaire ajouté (exemple statique) !')">Commenter</button>
            </div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_article_index') }}">back to list</a>

{% endblock %}

{% block stylesheets %}
    <style>
        .comment {
            background-color: #f1f3f5;
            padding: 10px;
            border-left: 4px solid #0d6efd;
            margin-bottom: 10px;
            border-radius: 4px;
        }
    </style>
{% endblock %}
