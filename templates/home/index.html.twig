{% extends 'base.html.twig' %}

{% block title %}
	Mon Blog
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('article_like') }}
{% endblock %}

{% block body %}
	<div class="container col-md-10 pt-3">
		{% for article in articles %}
			<div class="border border-secondary rounded p-3 my-2">
				<h2 class="fs-3 fw-semibold">
					<a href="{{ path('app_article_show', {'id': article.id}) }}" class="text-decoration-none">{{ article.title }}</a>
				</h2>
				<div class="text-secondary">
					publié le
					{{ article.createdAt|date('d M Y à H:i') }}
				</div>
				<p>
					{{ article.content|length > 100 ? article.content|slice(0, 150) ~ '...' : article.content }}
				</p>
				{% if article.categories|length > 0 %}
					{% for category in article.categories %}
						<span class="badge text-bg-secondary rounded-pill">
							{{ category.title }}
						</span>
					{% endfor %}
				{% endif %}
				<div class="d-flex justify-content-end mt-2">
					<button id="article-like-{{ article.id }}" type="button" class="like-button {% for like in article.likes %}{% if like.ipAddress == ipAddress %} liked {% endif %}{% endfor %} btn btn-primary" data-article-id="{{ article.id }}">
						<i class="fa-solid fa-xl fa-thumbs-up"></i>
						<span id="likes-count" class="bg-white p-1 rounded text-dark ms-3">
							{{ article.likes|length }}
						</span>
					</button>
				</div>
			</div>
		{% else %}
			<div>Pas D'article pour le moment</div>
		{% endfor %}
	</div>
	<div class="d-flex justify-content-center">
		{{ knp_pagination_render(articles) }}
	</div>
{% endblock %}
