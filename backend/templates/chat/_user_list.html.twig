<div class="col-lg-4">
	<div class="offcanvas-lg offcanvas-end" tabindex="-1" id="offcanvasSidebar">
		<div class="offcanvas-header justify-content-end pb-2">
			<button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasSidebar" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body p-3 p-lg-0">
			<div class="card bg-light w-100">
				<div class="card-header">
					<form action="">
						<input type="text" class="form-control form-control-lg" placeholder="Recherche ...">
					</form>
				</div>
				<div class="card-body p-3" style="max-height: 500px;overflow: auto;">
					<div class="list-group">
						{% for user in users %}
							<a href="{{ path('app_chat_show', {'receiverId': user.id}) }}" class="list-group-item{% if receiverId == user.id %} active{% endif %}">
								<div class="d-flex justify-content-between align-items-center">
									<img class="rounded-circle" src="/images/profile_image.jpg" width="35" height="35" alt="profile image">
									<span class="ms-3">{{ user.fullName }}</span>
									<span class="ms-auto text-bg-light px-1 rounded">
										5
									</span>
								</div>
							</a>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
