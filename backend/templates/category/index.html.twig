{% extends 'admin/layout.html.twig' %}

{% block title %}
	Liste des catégories
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('category_list') }}
{% endblock %}

{% block body %}
	<div class="d-flex flex-column flex-lg-row justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h1 class="h2">Liste des catégories</h1>
		<div class="mb-2 mb-md-0">
			<a href="{{ path('app_category_new') }}" class="btn btn-sm btn-outline-secondary">
				Nouveau catégorie
			</a>
		</div>
	</div>
	<div class="container">
		<div class="border rounded-md px-3">
			<table class="table table-hover align-middle" id="categories-table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Titre</th>
						<th>Date de création</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody></tbody>
			</table>
		</div>
	</div>
{% endblock %}
